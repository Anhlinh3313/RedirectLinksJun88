@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="/lib/toastr/css/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
    @await RenderSectionAsync("css", required: false)
</head>
<body>
    <div>
        <div id="left-side" class="col-2 p-0 float-left border-right overflow-auto">
            <h2 class="text-center border-bottom pt-3 pb-3 text-primary font-weight-bold shadow-sm">Links - Manager</h2>
            <div id="left-side-menu">
                <div class="border-bottom border-light pl-3 mt-4">
                    <h5 class="mt-2 mb-2">
                        <a href="/admin/linkgroup">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-diamond-fill" viewBox="0 0 16 16">
                                <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L4.047 3.339 8 7.293l3.954-3.954L9.049.435zm3.61 3.611L8.708 8l3.954 3.954 2.904-2.905c.58-.58.58-1.519 0-2.098l-2.904-2.905zm-.706 8.614L8 8.708l-3.954 3.954 2.905 2.904c.58.58 1.519.58 2.098 0l2.905-2.904zm-8.614-.706L7.292 8 3.339 4.046.435 6.951c-.58.58-.58 1.519 0 2.098l2.904 2.905z" />
                            </svg>
                            Quản lý nhóm link
                        </a>
                    </h5>
                </div>
                <div class="border-bottom border-light pl-3 mt-4">
                    <h5 class="mt-2 mb-2">
                        <a href="/admin">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-diamond-fill" viewBox="0 0 16 16">
                                <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L4.047 3.339 8 7.293l3.954-3.954L9.049.435zm3.61 3.611L8.708 8l3.954 3.954 2.904-2.905c.58-.58.58-1.519 0-2.098l-2.904-2.905zm-.706 8.614L8 8.708l-3.954 3.954 2.905 2.904c.58.58 1.519.58 2.098 0l2.905-2.904zm-8.614-.706L7.292 8 3.339 4.046.435 6.951c-.58.58-.58 1.519 0 2.098l2.904 2.905z" />
                            </svg>
                            Quản lý links
                        </a>
                    </h5>
                </div>
                <div class="border-bottom border-light pl-3 mt-4">
                    <h5 class="mt-2 mb-2">
                        <a href="/admin/background">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-diamond-fill" viewBox="0 0 16 16">
                                <path d="M9.05.435c-.58-.58-1.52-.58-2.1 0L4.047 3.339 8 7.293l3.954-3.954L9.049.435zm3.61 3.611L8.708 8l3.954 3.954 2.904-2.905c.58-.58.58-1.519 0-2.098l-2.904-2.905zm-.706 8.614L8 8.708l-3.954 3.954 2.905 2.904c.58.58 1.519.58 2.098 0l2.905-2.904zm-8.614-.706L7.292 8 3.339 4.046.435 6.951c-.58.58-.58 1.519 0 2.098l2.904 2.905z" />
                            </svg>
                            Quản lý ảnh nền
                        </a>
                    </h5>
                </div>
            </div>
        </div>
        <div id="right-side" class="col-10 p-0 float-left">
            <div id="top-bar">
                <div class="text-left float-left pl-3">
                    <span class="text-muted">Hệ thống quản lý links - Created by HewIT - &copy;Copyright Taipei101 - @DateTime.Now.Year</span>
                </div>
                <div class="text-right float-right pr-3">
                    @{
                        var session = Context.Session.GetString("ADMIN_SESSION");
                        if (session != null)
                        {
                            <p>@session (<a href="/Login/Logout">Đăng xuất</a>)</p>
                        }
                        else
                        {
                            <p>(Chưa đăng nhập)</p>
                        }
                    }
                </div>
                <div class="clear-both"></div>
            </div>
            <div class="pl-4 pr-4">
                @RenderBody()
            </div>

        </div>
        <div class="clear-both"></div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/toastr/js/toastr.min.js"></script>
    <script>
        toastr.options.positionClass = 'toast-top-center';
    </script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
